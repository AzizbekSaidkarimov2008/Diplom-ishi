<script>
    let iconSearch = document.querySelector('.nav-linkIcon')
    let noneBtn = document.querySelector('.click-btn-danger')
    let closeBtn = document.querySelector('.nav-linkClose')

    iconSearch.addEventListener('click', () => {
        noneBtn.style.opacity = 0
        noneBtn.style.transition = .5
    })
    closeBtn.addEventListener('click', () => {
        noneBtn.style.opacity = 1
        ul.style.top = '-20%'
    })



    function myFunction() {
        var input, filter, ul, li, a, i, txtValue;
        let closeSearch = document.querySelector('.nav-linkClose')
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        ul = document.querySelector(".myUL");
        li = ul.getElementsByTagName("li");
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
                ul.style.top = '0%'
            } else {
                li[i].style.display = "none";
            }
            closeSearch.addEventListener('click', () => {
                ul.style.top = '-20%'
            })
        }
    }
</script>

