<div class="content-header">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <form action="/create/sendMail/email.id" method="post">
          <div class="form-group">
            <label for="inputClientCompany">From:</label>
            <input
              type="email"
              name="from"
              id="inputClientCompany"
              class="email form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="to">To:</label>
            <input
              type="email"
              name="to"
              id="to"
              value="{{email.email}}"
              class="email form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="subject">Subject:</label>
            <input
              type="text"
              name="subject"
              id="subject"
              class="subject form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea
              id="message"
              name="message"
              class="message form-control"
              required
            ></textarea>
          </div>
          <button type="submit" class="submit btn btn-block btn-outline-success">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>